@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<!-- Created By CodingLab - www.codinglabweb.com -->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <!---<title> Responsive Registration Form | CodingLab </title>--->
    <link rel="stylesheet" href="~/css/register.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <div class="title">Registration</div>
        <div class="content">
            <form role="form" id="account" method="post">
                <div class="user-details">
                    <div class="input-box">
                        <span asp-validation-for="Input.FullName" class="details">Full Name</span>
                        <input asp-for="Input.FullName" type="text" placeholder="Enter your name" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="Input.Email" class="details">Email</span>
                        <input asp-for="Input.Email" type="text" placeholder="Enter your email" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="Input.Phone" class="details">Phone Number</span>
                        <input asp-for="Input.Phone" type="text" placeholder="Enter your number" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="Input.Password" class="details">Password</span>
                        <input asp-for="Input.Password" type="password" placeholder="Enter your password" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="Input.ConfirmPassword" class="details">Confirm Password</span>
                        <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm your password" required>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Register">
                </div>
            </form>
        </div>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}