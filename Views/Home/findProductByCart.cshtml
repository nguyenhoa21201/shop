@model List< project.Models.Product>


<div class="about">
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                <div class="glasses_box">
                    <figure><img src="~/images/@item.ProductImagePath" alt="#" /></figure>
                    <h3><span class="blu">$</span>@item.Price</h3>
                    <p>@item.ProductName</p>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Single" asp-route-id="@item.ProductId">Xem Ngay</a>
                    </li>
                </div>
            </div>
        }

    </div>
</div>
</div>